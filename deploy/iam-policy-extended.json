{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "*"
    },
    {
      "Sid": "DynamoDBFullAccess",
      "Effect": "Allow",
      "Action": "dynamodb:*",
      "Resource": [
        "arn:aws:dynamodb:ap-south-1:010526260063:table/base-wecare-digital-whatsapp",
        "arn:aws:dynamodb:ap-south-1:010526260063:table/base-wecare-digital-whatsapp/index/*"
      ]
    },
    {
      "Sid": "S3FullAccess",
      "Effect": "Allow",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::dev.wecare.digital",
        "arn:aws:s3:::dev.wecare.digital/*"
      ]
    },
    {
      "Sid": "SocialMessagingFullAccess",
      "Effect": "Allow",
      "Action": "social-messaging:*",
      "Resource": "*"
    },
    {
      "Sid": "SNSFullAccess",
      "Effect": "Allow",
      "Action": "sns:*",
      "Resource": "*"
    },
    {
      "Sid": "EC2DescribeVpcEndpoints",
      "Effect": "Allow",
      "Action": "ec2:DescribeVpcEndpoints",
      "Resource": "*"
    },
    {
      "Sid": "IAMGetServiceLinkedRole",
      "Effect": "Allow",
      "Action": "iam:GetRole",
      "Resource": "arn:aws:iam::010526260063:role/aws-service-role/social-messaging.amazonaws.com/*"
    },
    {
      "Sid": "StepFunctionsForCampaigns",
      "Effect": "Allow",
      "Action": [
        "states:StartExecution",
        "states:DescribeExecution",
        "states:StopExecution",
        "states:ListExecutions"
      ],
      "Resource": "arn:aws:states:ap-south-1:010526260063:stateMachine:whatsapp-campaign-*"
    },
    {
      "Sid": "SQSForRateLimiting",
      "Effect": "Allow",
      "Action": [
        "sqs:SendMessage",
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sqs:GetQueueAttributes"
      ],
      "Resource": "arn:aws:sqs:ap-south-1:010526260063:whatsapp-*"
    }
  ]
}
