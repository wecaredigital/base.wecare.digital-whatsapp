{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:ap-south-1:010526260063:log-group:/aws/lambda/base-wecare-digital-whatsapp:*"
    },
    {
      "Sid": "DynamoDBFullAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan",
        "dynamodb:BatchGetItem",
        "dynamodb:BatchWriteItem",
        "dynamodb:DescribeTable"
      ],
      "Resource": [
        "arn:aws:dynamodb:ap-south-1:010526260063:table/base-wecare-digital-whatsapp",
        "arn:aws:dynamodb:ap-south-1:010526260063:table/base-wecare-digital-whatsapp/index/*"
      ]
    },
    {
      "Sid": "S3MediaAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "s3:GetObjectAttributes"
      ],
      "Resource": [
        "arn:aws:s3:::dev.wecare.digital",
        "arn:aws:s3:::dev.wecare.digital/*"
      ]
    },
    {
      "Sid": "SocialMessagingFullAccess",
      "Effect": "Allow",
      "Action": [
        "social-messaging:SendWhatsAppMessage",
        "social-messaging:GetWhatsAppMessageMedia",
        "social-messaging:PostWhatsAppMessageMedia",
        "social-messaging:DeleteWhatsAppMessageMedia",
        "social-messaging:GetLinkedWhatsAppBusinessAccount",
        "social-messaging:GetLinkedWhatsAppBusinessAccountPhoneNumber",
        "social-messaging:ListLinkedWhatsAppBusinessAccounts",
        "social-messaging:ListLinkedWhatsAppBusinessAccountPhoneNumbers",
        "social-messaging:AssociateWhatsAppBusinessAccount",
        "social-messaging:DisassociateWhatsAppBusinessAccount",
        "social-messaging:TagResource",
        "social-messaging:UntagResource",
        "social-messaging:ListTagsForResource",
        "social-messaging:PutWhatsAppBusinessAccountEventDestinations"
      ],
      "Resource": "*"
    },
    {
      "Sid": "SNSNotifications",
      "Effect": "Allow",
      "Action": [
        "sns:Publish",
        "sns:Subscribe",
        "sns:Unsubscribe",
        "sns:ListSubscriptionsByTopic"
      ],
      "Resource": [
        "arn:aws:sns:ap-south-1:010526260063:base-wecare-digital",
        "arn:aws:sns:ap-south-1:010526260063:whatsapp-*"
      ]
    },
    {
      "Sid": "EventBridgeForWebhooks",
      "Effect": "Allow",
      "Action": [
        "events:PutEvents",
        "events:PutRule",
        "events:PutTargets",
        "events:DeleteRule",
        "events:RemoveTargets",
        "events:DescribeRule",
        "events:ListRules"
      ],
      "Resource": [
        "arn:aws:events:ap-south-1:010526260063:event-bus/default",
        "arn:aws:events:ap-south-1:010526260063:rule/whatsapp-*"
      ]
    },
    {
      "Sid": "StepFunctionsForCampaigns",
      "Effect": "Allow",
      "Action": [
        "states:StartExecution",
        "states:DescribeExecution",
        "states:StopExecution",
        "states:ListExecutions",
        "states:GetExecutionHistory"
      ],
      "Resource": "arn:aws:states:ap-south-1:010526260063:stateMachine:whatsapp-*"
    },
    {
      "Sid": "SQSForRateLimiting",
      "Effect": "Allow",
      "Action": [
        "sqs:SendMessage",
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sqs:GetQueueAttributes",
        "sqs:GetQueueUrl"
      ],
      "Resource": "arn:aws:sqs:ap-south-1:010526260063:whatsapp-*"
    },
    {
      "Sid": "SecretsManagerForPaymentConfig",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue"
      ],
      "Resource": "arn:aws:secretsmanager:ap-south-1:010526260063:secret:whatsapp/*"
    },
    {
      "Sid": "KMSForEncryption",
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:GenerateDataKey"
      ],
      "Resource": "arn:aws:kms:ap-south-1:010526260063:key/*",
      "Condition": {
        "StringEquals": {
          "kms:ViaService": [
            "secretsmanager.ap-south-1.amazonaws.com",
            "dynamodb.ap-south-1.amazonaws.com"
          ]
        }
      }
    }
  ]
}
